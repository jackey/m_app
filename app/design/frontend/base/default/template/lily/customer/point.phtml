iv class="pager"><div class="pages jspages"></div></div></div></div>');										function showPage(list, page, item_size) {											if (page < 0) {												return;											}											// 先隐藏掉所有											list.each(function () {												$(this).hide();											});											// 再显示出对应的项目											var start = item_size * page;											for (var i = start; i < item_size + start; i++) {												if (list.get(i)) {													list.get(i).show();												}											}										}										$(function () {											var container = $("tbody[jspager]");											var total = $("> tr", container).size();											var page_size = parseInt((total / item_size));											// 然后合适的隐藏掉对应的项目											showPage(container.find("> tr"), 0, item_size);											// 先生成分页编码											if (total % item_size >  0) page_size += 1;											var pages = $("<ol></ol>");											for (var i = 0; i < page_size; i++) {												pages.append("<li data-index='"+i+"'><a href='javascript:void(0)'>"+ (i + 1) +"</a></li>");											}											pages.find("li").first().find("a").addClass("current");											pager_links.find(".pages").append(pages);											container.parent().append(pager_links);											$("li", pager_links).click(function () {												showPage(container.find("> tr") ,$(this).data("index"), item_size);												$(this).siblings().find("a").removeClass("current");												$(this).children("a").addClass("current");											});										});									})(jQuery);								</script>						</table>							<?php else: ?>							<?php echo $this->__('You Have No Records.'); ?>						<?php endif;?>							<?php else: ?>						<?php echo $this->__('Opps,Some Error on Connection.'); ?>					<?php endif; ?>				<?php else: ?>					<?php echo $this->__('You Have No Vip Cards.'); ?>				<?php endif; ?>            </div>        </div>    </div>    <!--  -->